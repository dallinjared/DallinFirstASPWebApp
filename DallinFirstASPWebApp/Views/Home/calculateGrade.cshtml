@{
    ViewBag.Title = "Grade Calculator";
}

@model Grade

<body>
    <div class="section-forum">
        <form class="form" method="post">
            <label>Assignments:</label>
            <input id="assignments" asp-for="assignments"/>
            <br />
            <br />
            <label>Group Projects:</label>
            <input id="groupProjects" asp-for="groupProjects"/>
            <br />
            <br />
            <label>Quizzes:</label>
            <input id="quizzes" asp-for="quizzes" />
            <br />
            <br />
            <label>Exams:</label>
            <input id="exams" asp-for="exams"/>
            <br />
            <br />
            <label>INTEX:</label>
            <input id="intex" asp-for="intex"/>
            <br />
            <br />
            <button type="submit" value="Calculate Grade" id="submitButton">Calculate Grade</button>
            <div asp-validation-summary="All"></div>
            <p id="letter"></p><p id="percent"></p>
        </form>
    </div>
</body>